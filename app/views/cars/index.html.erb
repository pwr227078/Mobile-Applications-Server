<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Registration number</th>
      <th>Mileage</th>
      <th>Fuel type</th>
      <th>Review</th>
      <th>Oil change</th>
      <th>Notifications allowed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.description %></td>
        <td><%= car.name %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.registration_number %></td>
        <td><%= car.mileage %></td>
        <td><%= car.fuel_type %></td>
        <td><%= car.review %></td>
        <td><%= car.oil_change %></td>
        <td><%= car.notifications_allowed %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

